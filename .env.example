# Database Configuration
# Для Docker окружения установите DOCKER_ENV=1
DOCKER_ENV=0

# Yandex Object Storage (S3) Configuration
S3_ENDPOINT=https://storage.yandexcloud.net
S3_REGION=ru-central1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# SMS Configuration (smspilot.ru)
# Для тестирования используйте ключ-эмулятор: XXXXXXXXXXXXYYYYYYYYYYYYZZZZZZZZXXXXXXXXXXXXYYYYYYYYYYYYZZZZZZZZ1234
# При использовании ключа-эмулятора реальная отправка SMS не происходит
SMS_API_KEY=XXXXXXXXXXXXYYYYYYYYYYYYZZZZZZZZXXXXXXXXXXXXYYYYYYYYYYYYZZZZZZZZ1234
SMS_API_URL=https://smspilot.ru/api.php
SMS_IS_EMULATOR=1
